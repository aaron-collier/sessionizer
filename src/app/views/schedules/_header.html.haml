.nav-top
  .timeslots
    - @event.timeslots.where(schedulable: true).each do |slot|
      %a.timeslot{:id => "timeslot_#{slot.id}_nav",
                  :href=> "#timeslot_#{slot.id}",
                  :startsAt => slot.starts_at.in_time_zone.to_i,
                  :endsAt   => slot.ends_at  .in_time_zone.to_i }
        = pill_label(slot)
  .maps
    =link_to "Unconfernce signup", home_page_path

    %a.room{ target: '_blank',
             href: "#{asset_path('maps/central-floor-plan.png')}" }
      BPL Map

    %a.twitter{ target: '_blank', href: "http://twitter.com/#hydraconnect" }
      :escaped
        #hydraconnect
